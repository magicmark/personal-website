{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "styled-components": "^5.0.1"
  },
  "scripts": {
    "start:client": "react-scripts start",
    "start:server": "webpack --config webpack.server.config.js --watch --mode development",
    "build:client": "react-scripts build",
    "build:server": "webpack --config webpack.server.config.js --mode production",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build": "yarn build:client && yarn build:server"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@neutrinojs/node": "^9.1.0",
    "neutrino": "^9.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}
